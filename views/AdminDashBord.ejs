<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Foodies Kitchen Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

</head>

<body>

<div class="sidebar">
  <h4><i class="bi bi-cup-hot-fill"></i> FOODIES KITCHEN</h4>
  <a class="nav-link active"><i class="bi bi-house-door-fill"></i> Dashboard</a>

  <div class="nav-link" onclick="toggleSubmenu('categoryMenu')">
    <i class="bi bi-card-list"></i> Category
  </div>
  <div id="categoryMenu" class="submenu">
    <a class="nav-link" href="/AddCatagory">Add Category</a>
    <a class="nav-link" href="/ViewCatagory">View Category</a>
  </div>

  <div class="nav-link" onclick="toggleSubmenu('menuSection')">
    <i class="bi bi-journal-text"></i> Menu
  </div>
  <div id="menuSection" class="submenu">
    <a class="nav-link" href="/addmenu">Add Menu</a>
    <a class="nav-link" href="/ViewMenu">View Menu</a>
  </div>

  <div class="nav-link" onclick="toggleSubmenu('staffSection')">
    <i class="bi bi-person-fill"></i> Staffs
  </div>
  <div id="staffSection" class="submenu">
    <a class="nav-link">Add Staff</a>
    <a class="nav-link">View Staff</a>
  </div>

  <a class="nav-link"><i class="bi bi-grid-1x2-fill"></i> Tables</a>
  <a class="nav-link"><i class="bi bi-bag-check-fill"></i> Orders</a>
  <a class="nav-link"><i class="bi bi-receipt-cutoff"></i> Bills</a>
  <a class="nav-link"><i class="bi bi-bar-chart-line-fill"></i> Reports</a>

  
  <div style="position: absolute; bottom: 20px; width: 100%;">
    <a class="nav-link text-danger" href="/logout">
      <i class="bi bi-box-arrow-right"></i> Logout
    </a>
  </div>
</div>

  <!-- Main Content Area -->
  <%-include('NavBarAdmin')%>

  <script>
    function toggleSubmenu(id) {
      const submenu = document.getElementById(id);
      submenu.classList.toggle('show');
    }
  </script>

</body>
</html>