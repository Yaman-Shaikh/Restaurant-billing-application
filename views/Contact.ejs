  <style>
    body {
      margin: 0;
      font-family: 'Roboto', sans-serif;
      background: linear-gradient(135deg, #fff3e0, #ffe0b2);
      color: #333;
    }

    header {
      background-color: #b71c1c;
      color: white;
      text-align: center;
      padding: 40px 20px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

    header h1 {
      margin: 0;
      font-size: 2.5rem;
    }

    header p {
      font-size: 1.1rem;
      margin-top: 10px;
    }

    .contact-container {
      max-width: 1000px;
      margin: 40px auto;
      padding: 20px;
      background: #fff;
      border-radius: 15px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      animation: fadeIn 1s ease-in-out;
    }

    .info-box {
      display: flex;
      flex-direction: column;
      gap: 20px;
      padding: 20px;
    }

    .info-item {
      display: flex;
      align-items: center;
      font-size: 1.1rem;
      background: #ffe8e8;
      padding: 15px;
      border-radius: 10px;
      transition: transform 0.2s ease;
    }

    .info-item:hover {
      transform: scale(1.02);
    }

    .info-item i {
      font-size: 24px;
      margin-right: 15px;
      color: #b71c1c;
      min-width: 30px;
      text-align: center;
    }

    .extra-info {
      margin-top: 30px;
      background: #fff5f5;
      padding: 20px;
      border-radius: 10px;
    }

    .extra-info h3 {
      margin-top: 0;
      color: #b71c1c;
    }

    iframe {
      width: 100%;
      height: 300px;
      border: none;
      border-radius: 10px;
      margin-top: 30px;
    }

    .social-icons {
      margin-top: 15px;
    }

    .social-icons a {
      margin-right: 15px;
      text-decoration: none;
      color: #b71c1c;
      font-size: 28px;
      transition: color 0.3s ease;
    }

    .social-icons a:hover {
      color: #d32f2f;
    }

    footer {
      background-color: #b71c1c;
      color: white;
      text-align: center;
      padding: 20px;
      margin-top: 40px;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @media (max-width: 600px) {
      header h1 { font-size: 2rem; }
      .info-item { font-size: 1rem; flex-direction: column; align-items: flex-start; }
      .info-item i { margin-bottom: 5px; }
    }
  </style>
