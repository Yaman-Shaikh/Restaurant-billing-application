<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Update Menu Item</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #e0f7fa, #fce4ec);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background-attachment: fixed;
    }

    .form-wrapper {
      background: rgba(255, 255, 255, 0.3);
      backdrop-filter: blur(15px);
      border-radius: 20px;
      padding: 40px;
      max-width: 600px;
      width: 100%;
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
      border: 1px solid rgba(255, 255, 255, 0.2);
      animation: fadeIn 0.8s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    h1 {
      text-align: center;
      color: #004d40;
      font-weight: 600;
      margin-bottom: 30px;
    }

    label {
      font-weight: 500;
      margin-bottom: 6px;
      color: #333;
    }

    .form-control,
    .form-select {
      border-radius: 12px;
      padding: 12px;
      font-size: 14px;
      background-color: rgba(255, 255, 255, 0.95);
      border: 1px solid #ccc;
      transition: all 0.3s ease;
    }

    .form-control:focus,
    .form-select:focus {
      border-color: #26c6da;
      box-shadow: 0 0 0 4px rgba(38, 198, 218, 0.2);
      background-color: #fff;
      outline: none;
    }

    button[type="submit"] {
      background: linear-gradient(to right, #26c6da, #ff4081);
      border: none;
      color: white;
      font-weight: 600;
      padding: 14px;
      font-size: 16px;
      border-radius: 12px;
      margin-top: 15px;
      width: 100%;
      transition: all 0.3s ease;
    }

    button[type="submit"]:hover {
      background: linear-gradient(to right, #00acc1, #e91e63);
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0, 172, 193, 0.4);
    }
  </style>
</head>

<body>

  <div class="form-wrapper">
    <h1>Update Menu Item</h1>

    <form action="/updatemenu" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="id" value="<%= record.id %>">

      <div class="mb-3">
        <label for="name" class="form-label">Item Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= record.item_name %>" required>
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select class="form-select" id="category" name="category" required>
          <option value="" disabled <%= !record.category_id ? 'selected' : '' %>>Select Category</option>
          <% categories.forEach(category => { %>
            <option value="<%= category.id %>" <%= category.id == record.category_id ? 'selected' : '' %>>
              <%= category.name %>
            </option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" rows="3" required><%= record.description %></textarea>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price (â‚¹)</label>
        <input type="number" class="form-control" id="price" name="price" value="<%= record.price %>" required>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Update Image</label>
        <input type="file" class="form-control" id="image" name="image">
      </div>

      <button type="submit">Update Item</button>
    </form>
  </div>

</body>
</html>
