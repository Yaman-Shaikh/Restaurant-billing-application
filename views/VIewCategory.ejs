<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Category</title>
    <!-- Bootstrap CDN -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script>
        function filterTable() {
            let input = document.getElementById("searchInput").value.toLowerCase();
            let rows = document.querySelectorAll("#categoryTable tbody tr");

            rows.forEach(row => {
                let name = row.querySelector("td:nth-child(2)").textContent.toLowerCase();
                row.style.display = name.includes(input) ? "" : "none";
            });
        }
    </script>
</head>
<div class="container">
<body class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>View Categories</h2>       
    </div>

    <input type="text" id="searchInput" onkeyup="filterTable()" class="form-control mb-3" placeholder="Search by category name">

    <table class="table table-bordered table-hover" id="categoryTable">
        <thead class="table-dark">
            <tr>
                <th>Sr.no</th>
                <th>Category Name</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% if (data.length === 0) 
            {
                 %>
                <tr>
                    <td colspan="4" class="text-center text-danger">There is no category present. Please add one.</td>
                </tr>
            <% 
        }
         else
          {
             %>
                <%
                 data.forEach((item, index) => {
                     %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= item.name %></td>
                        <td><a href="/update?id=<%= item.id %>"><i class="fa-regular fa-pen-to-square"></i></a></td>
                        <td><a href="/delete?id=<%= item.id %>"><i class="fa-solid fa-trash text-danger"></i></a></td>
                    </tr>
                <% 
            });
             %>
            <% 
        } 
        %>
        </tbody>
    </table>
</div>
</body>
</html>
