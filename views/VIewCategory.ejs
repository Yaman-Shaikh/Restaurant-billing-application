<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>View Categories</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <!-- Stunning Glassmorphism CSS -->
  <style>
    body {
      margin: 0;
      padding: 40px 10px;
      background: linear-gradient(135deg, #141e30, #243b55);
      font-family: 'Segoe UI', sans-serif;
      color: #ffffff;
    }

    .category-container {
      background: rgba(255, 255, 255, 0.08);
      border-radius: 20px;
      padding: 35px;
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.6);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    h2 {
      font-size: 2rem;
      font-weight: 700;
      color: black
    }

    #searchInput {
      border-radius: 12px;
      border: none;
      padding: 12px 16px;
      font-size: 15px;
      color:black;
      background: rgba(255, 255, 255, 0.1);
      box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.4);
    }

    #searchInput::placeholder {
      color: rgba(0, 0, 0, 0.6);
    }

    #searchInput:focus {
      outline: none;
      box-shadow: 0 0 0 3px rgba(255, 193, 7, 0.3);
    }

    .table {
      margin-top: 20px;
      border-radius: 12px;
      overflow: hidden;
    }

    .table th {
      background: rgba(0, 0, 0, 0.7);
      color: #ffc107;
      border: none;
    }

    .table td {
      background: rgba(255, 255, 255, 0.05);
      color: black;
      border: none;
      vertical-align: middle;
    }

    .table-hover tbody tr:hover {
      background: rgba(255, 255, 255, 0.12);
    }

    .fa-pen-to-square,
    .fa-trash {
      font-size: 1.2rem;
      padding: 6px 10px;
      border-radius: 6px;
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .fa-pen-to-square {
      color: #0dcaf0;
    }

    .fa-pen-to-square:hover {
      background-color: rgba(13, 202, 240, 0.2);
    }

    .fa-trash {
      color: #ff6b6b;
    }

    .fa-trash:hover {
      background-color: rgba(255, 107, 107, 0.2);
    }

    .text-danger {
      font-weight: 500;
      font-size: 1.05rem;
      color: #ffcccc !important;
    }

    /* Scrollbar */
    ::-webkit-scrollbar {
      height: 8px;
      width: 8px;
    }

    ::-webkit-scrollbar-thumb {
      background: rgba(255, 255, 255, 0.2);
      border-radius: 10px;
    }

    /* Animation */
    .fade-in {
      animation: fadeInUp 0.6s ease-out;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>

<body>
  <div class="container category-container fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><i class="fa-solid fa-tags me-2"></i>View Categories</h2>
    </div>

    <input type="text" id="searchInput" class="form-control mb-4" placeholder="Search category..." onkeyup="ajaximp(this.value)" />

    <table class="table table-bordered table-hover" id="categoryTable">
      <thead>
        <tr>
          <th>Sr.No</th>
          <th>Category Name</th>
          <th>Update</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody id="tbody">
        <% if (data.length === 0) { %>
          <tr>
            <td colspan="4" class="text-center text-danger">
              <i class="fa-solid fa-circle-exclamation me-2"></i>No categories found.
            </td>
          </tr>
        <% } else { %>
          <% data.forEach((item, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= item.name %></td>
              <td><a href="/UpdateCategory?id=<%= item.id %>"><i class="fa-regular fa-pen-to-square"></i></a></td>
              <td><a href="/DeleteCategory?id=<%= item.id %>"><i class="fa-solid fa-trash"></i></a></td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Optional Script -->
  <script type="text/javascript" src="ajaxtest.js"></script>
</body>
</html>
