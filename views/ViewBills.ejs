<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/css/view-bills.css">

<div class="container mt-4">
  <h3 class="text-center mb-4">Completed Orders</h3>

  <div class="row">
    <% orders.forEach(order => { %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm p-3">
          <h6><strong>Order ID:</strong> <%= order.order_id %></h6>
          <p><strong>Table ID:</strong> <%= order.table_id %></p>
          <p><strong>Staff Name:</strong> <%= order.name %></p>
          <p><strong>Order Date:</strong> <%= order.ord_date.toISOString().split('T')[0] %></p> 
          <p><strong>Total Amount:</strong> ₹<%= order.total_amt %></p>
          <table class="table table-sm mt-2">
            <thead>
              <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Rate (₹)</th>
              </tr>
            </thead>
            <tbody>
              <% order.items.forEach(item => { %>
                <tr>
                  <td><%= item.item_name %></td>
                  <td><%= item.quantity %></td>
                  <td><%= item.item_price %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>

          <a href="/dashboard/orders/<%= order.order_id %>/bill/pdf" class="btn btn-warning">View Bill</a>
        </div>
      </div>
    <% }); %>
  </div>
</div>
