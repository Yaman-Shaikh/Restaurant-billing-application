<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>View Menu</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />

  <!-- Bootstrap & Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to right, #fce4ec, #e0f7fa);
      min-height: 100vh;
      padding: 30px;
    }

    h1 {
      text-align: center;
      color: #00695c;
      margin-bottom: 30px;
      font-weight: 600;
    }

    #searchInput {
      width: 100%;
      max-width: 400px;
      margin: 0 auto 30px;
      display: block;
      padding: 12px 18px;
      border-radius: 12px;
      border: 1px solid #ccc;
      font-size: 14px;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
      transition: 0.3s;
    }

    #searchInput:focus {
      border-color: #26c6da;
      outline: none;
      box-shadow: 0 0 0 4px rgba(38, 198, 218, 0.2);
    }

    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0 12px;
    }

    thead {
      background: #00bcd4;
      color: white;
    }

    thead th {
      padding: 12px;
      text-align: center;
      border-radius: 10px 10px 0 0;
    }

    tbody td {
      padding: 12px;
      background: #ffffff;
      text-align: center;
      vertical-align: middle;
      border-bottom: 1px solid #e0e0e0;
      border-radius: 8px;
    }

    tbody tr:hover td {
      background: #e0f7fa;
    }

    img {
      border-radius: 8px;
      object-fit: cover;
    }

    a i {
      font-size: 18px;
      transition: color 0.3s ease;
    }

    a .fa-pen-to-square {
      color: #00796b;
    }

    a .fa-trash {
      color: #d32f2f;
    }

    a:hover .fa-pen-to-square {
      color: #004d40;
    }

    a:hover .fa-trash {
      color: #b71c1c;
    }
  </style>
</head>

<body>

  <h1>üçΩÔ∏è Menu List</h1>

  <input type="text" placeholder="Search for a dish..." onkeyup="searchMenu(this.value)" id="searchInput" />

  <div class="table-responsive">
    <table class="table align-middle">
      <thead>
        <tr>
          <th>ID</th>
          <th>Item Name</th>
          <th>Price</th>
          <th>Category</th>
          <th>Description</th>
          <th>Image</th>
          <th>Update</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody id="tbody">
        <% if (data.length > 0) { %>
          <% data.forEach((item, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= item.item_name %></td>
              <td>‚Çπ<%= item.price %></td>
              <td><%= item.category_name %></td>
              <td><%= item.description %></td>
              <td><img src="/uploads/<%= item.image %>" width="80" height="80" alt="image" /></td>
              <td><a href="/UpdateMenu?id=<%= item.id %>"><i class="fa-regular fa-pen-to-square"></i></a></td>
              <td><a href="/DeleteMenu?id=<%= item.id %>"><i class="fa-solid fa-trash"></i></a></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="8">No menu items found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <script src="/searchMenu.js"></script>
</body>
</html>
