<style>
  /* Reset + Base Styles */
body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #0f0f0f;
  color: #f5f5f5;
  padding: 40px;
  margin: 0;
}

h1 {
  text-align: center;
  font-size: 38px;
  color: #ffd700;
  margin-bottom: 50px;
  text-transform: uppercase;
  letter-spacing: 1.5px;
  text-shadow: 2px 2px 5px #000;
}

/* Order Card Styles */
.order-card {
  background: #1a1a1a;
  border: 1px solid #2b2b2b;
  padding: 25px 30px;
  margin: 30px auto;
  border-radius: 14px;
  box-shadow: 0 8px 20px rgba(255, 215, 0, 0.1);
  max-width: 850px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.order-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 25px rgba(255, 215, 0, 0.2);
}

.order-card h3 {
  font-size: 24px;
  color: #ffdd00;
  margin-bottom: 10px;
}

.order-card p {
  margin: 6px 0;
  font-size: 16px;
  font-style: italic;
  color: #e0e0e0;
}

.order-card strong {
  color: #ffe100;
}

/* Item List */
.item-list {
  margin-top: 15px;
  padding-left: 20px;
}

.item-list li {
  margin-bottom: 10px;
  font-size: 16px;
  background-color: #222;
  border-left: 5px solid #ffdd00;
  padding: 10px 15px;
  border-radius: 6px;
  color: #f9f9f9;
  font-style: italic;
  transition: background 0.3s ease;
}

.item-list li:hover {
  background-color: #2a2a2a;
}

/* Status Badge */
.order-status {
  display: inline-block;
  padding: 5px 12px;
  border-radius: 20px;
  font-size: 13px;
  font-weight: bold;
  margin-left: 10px;
  text-transform: uppercase;
  color: #000;
}

.order-status.pending {
  background-color: #ffdd00;
}

.order-status.completed {
  background-color: #4caf50;
  color: #fff;
}

.order-status.cancelled {
  background-color: #e53935;
  color: #fff;
}

/* No Data Message */
.no-data {
  text-align: center;
  color: #aaa;
  font-size: 22px;
  margin-top: 100px;
  font-style: italic;
}

/* Buttons */
.view-bill-btn {
  display: inline-block;
  margin-top: 20px;
  margin-right: 10px;
  padding: 10px 22px;
  background: linear-gradient(to right, #ffdd00, #e6c200);
  color: #000;
  text-decoration: none;
  border-radius: 8px;
  font-weight: bold;
  font-size: 14px;
  letter-spacing: 0.5px;
  box-shadow: 0 4px 10px rgba(255, 221, 0, 0.2);
  transition: all 0.3s ease;
}

.view-bill-btn:hover {
  background: linear-gradient(to right, #e6c200, #c9a700);
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(255, 221, 0, 0.4);
}
  
</style>

