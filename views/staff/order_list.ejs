<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f9f9f9;
    color: #333;
    padding: 30px;
  }

  h1 {
    text-align: center;
    margin-bottom: 40px;
    font-size: 36px;
    color: #222;
  }

  .order-card {
    background-color: #fff;
    border: 1px solid #e1e1e1;
    padding: 20px 25px;
    margin: 20px auto;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    max-width: 800px;
    transition: transform 0.2s ease;
  }

  .order-card:hover {
    transform: scale(1.01);
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
  }

  .order-card h3 {
    margin-bottom: 10px;
    font-size: 24px;
    color: #333;
  }

  .order-card p {
    margin: 5px 0;
    font-size: 16px;
  }

  .order-card strong {
    color: #444;
  }

  .item-list {
    margin-top: 12px;
    padding-left: 20px;
  }

  .item-list li {
    margin-bottom: 8px;
    font-size: 16px;
    line-height: 1.5;
  }

  .no-data {
    text-align: center;
    color: #777;
    font-size: 20px;
    margin-top: 80px;
  }

  .view-bill-btn {
    display: inline-block;
    margin-top: 20px;
    padding: 10px 20px;
    background: linear-gradient(to right, #007bff, #0056b3);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: bold;
    transition: background 0.3s ease, transform 0.2s ease;
  }

  .view-bill-btn:hover {
    background: linear-gradient(to right, #0056b3, #003d80);
    transform: translateY(-2px);
  }
</style>


