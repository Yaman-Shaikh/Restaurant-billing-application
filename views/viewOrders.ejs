<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>View Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .btn-toggle { margin: 10px 10px 20px 0; font-weight: bold; }
        .order-card { box-shadow: 0 0 10px #ccc; border-radius: 10px; padding: 15px; margin-bottom: 20px; }
        .order-table th, .order-table td { padding: 5px 10px; }
        .highlight { font-weight: bold; }
    </style>
</head>
<body>
<div class="container mt-4">
    <h3 class="text-center">Your Orders</h3>

    <div class="text-center">
        <button class="btn btn-success btn-toggle">View Pending Orders</button>
        <button class="btn btn-warning btn-toggle">View Completed Orders</button>
    </div>

    <h5 class="mt-4 mb-3">Pending Orders</h5>

    <% orders.forEach(order => { %>
        <div class="order-card">
            <p><span class="highlight">Order ID:</span> <%= order.order_id %></p>
            <p><span class="highlight">Table ID:</span> <%= order.table_id %></p>
            <p><span class="highlight">Staff:</span> <%= order.staff_name %></p>
            <p><span class="highlight">Date:</span> <%= order.order_date %></p>
            <p><span class="highlight">Status:</span> <%= order.status %></p>
            <p class="highlight mb-1">Items:</p>
            <table class="table table-bordered order-table">
                <thead class="table-light">
                    <tr>
                        <th>Item</th>
                        <th>Qty</th>
                        <th>Price (â‚¹)</th>
                    </tr>
                </thead>
                <tbody>
                    <% order.items.forEach(item => { %>
                        <tr>
                            <td><%= item.item_name %></td>
                            <td><%= item.qty %></td>
                            <td><%= item.price %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% }); %>
</div>
</body>
</html>
